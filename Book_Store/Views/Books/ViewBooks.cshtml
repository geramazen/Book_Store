@model IEnumerable<Book_Store.Models.Book>

@{
    ViewBag.Title = "ViewBooks";
}
<style>
    .card:hover {
        background: #309df0;
        color: #fff;
        transform: scale(1.1);
        z-index: 9;
    }
</style>
<br />
@if (ViewBag.message != null)
{
    <div class="alert alert-success text-center" role="alert">
        @ViewBag.Message
        @if (ViewBag.OrderID != null)
        {
        <p>
            كود طلبك: @ViewBag.OrderID <br />
        </p>
        }
    </div>
}
<br />
<h1 class="text-center">الكــــــتبي</h1>
<h3 class="text-center">
    متجر الكتبي لبيع الكتب الجديدة والمستعملة
</h3>
<br />
<hr />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-3" style="margin-top:10px">
            <div class="card border-primary"  style="padding:5px">
                <img class="card-img-top" src="@Url.Content(item.image)" alt="Card image cap" width="100%" height="200">
                <div class="card-body text-center">
                    <h5 class="card-title">@item.title</h5>
                    <p class="card-text"><a href="~/Authors/AllWork/@item.AID">@item.Author.FName</a></p>
                    <p class="card-text"> السعر: @item.Price</p>
                    <hr />
                    <a href="@Url.Action("Details" , "Books" , new {id=item.ID})" class="btn btn-info" role="button">للمزيد</a>
                    <a href="@Url.Action("AddToCart" , "Books" , new {id=item.ID})" class="btn btn-primary" role="button"><span class="glyphicon glyphicon-shopping-cart"></span> إضف للسلة</a>
                </div>
            </div>
        </div>


    }

</div>