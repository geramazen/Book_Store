@model Book_Store.Models.Category

@{
    ViewBag.Title = "Edit";
}
<div class="tablesStyle">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.CID)

            <div class="form-group">
                @Html.LabelFor(model => model.CName, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="حفظ" class="btn btn-primary" />
                    @Html.ActionLink("إلغاء", "Index", null, htmlAttributes: new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
        <br />
    }

</div>
<br />
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
