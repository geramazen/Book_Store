@model Book_Store.Models.Category

@{
    ViewBag.Title = "Create";
}

<br />

<div class="tablesStyle">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.CName, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class=" col-md-10">
                    <input type="submit" value="إضافة" class="btn btn-primary" />
                    @Html.ActionLink("إلغاء", "Index", null, htmlAttributes: new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
        <br />
    }
</div>
<br />
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
