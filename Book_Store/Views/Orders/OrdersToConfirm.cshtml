@model IEnumerable<Book_Store.Models.Order>

@{
    ViewBag.Title = "OrdersToConfirm";
}
<br />
<div class="tablesStyle">
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublisherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderID)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobileNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublisherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderID)
                </td>
                <td>
                    <a href="@Url.Action("ConfirmOrder" , "Orders" , new {OrderID=item.OrderID})" class="btn btn-success">تأكيد</a>
                </td>
                <td>
                    <a href="@Url.Action("Details" , "Orders" , new {id=item.OrderID})" class="btn btn-primary">عرض التفاصيل</a>
                </td>
            </tr>
        }

    </table>
</div>
@if (Model.Count() == 0)
{
    <br />
    <br />
    <br />
    <br />
}
