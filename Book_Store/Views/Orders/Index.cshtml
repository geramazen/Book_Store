@model PagedList.IPagedList<Book_Store.Models.Order>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
}
<br />
<hr />
<h1 class="text-center">
    جميع الطلبات
</h1>
<hr />
<br />
@using (Html.BeginForm("Index", "Orders", FormMethod.Get))
{
    @Html.AntiForgeryToken()
    <div class="row">

        <div class="form-group col-md-4">
            <div class="col-md-10">
                @Html.Editor("ID", new { htmlAttributes = new { @class = "form-control", @placeholder = "أدخل كود الطلب" } })
            </div>
        </div>

        <div class="form-group col-md-4">
            <div class="col-md-10">
                <button class="btn btn-success" value="Search" type="submit"><i class="fa fa-search" aria-hidden="true"></i> ابحث</button>
            </div>
        </div>

    </div>

}

<br />
<table class="table">
    <tr>
        <th>
            إسم العميل
        </th>
        <th>
            عنوان العميل
        </th>
        <th>
            رقم العميل
        </th>
        <th>
            كود الطلب
        </th>
        <th>
            حالة الطلب
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderID)
            </td>
            <td>
                @if (item.Order_Status == 0)
                {
                    <p>
                        معلّق
                    </p>
                }
                @if (item.OrderID == 1)
                {
                    <p>
                        مؤكد
                    </p>
                }
                @if (item.OrderID == 2)
                {
                    <p>
                        شُحِن
                    </p>
                }
            </td>
        </tr>
    }

</table>
<div class="text-center">
    @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }))
</div>