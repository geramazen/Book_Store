@model IEnumerable<Book_Store.Models.Order>
@{
    ViewBag.Title = "OrderFollowing";
}

@using (Html.BeginForm("CheckOrder", "Orders"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.Editor("OrderID", new { htmlAttributes = new { @class = "form-control", @placeholder = "أدخل كود الطلب" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="تحقق" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@if (@ViewBag.OrderStatusMessage != null)
{
    <div class="text-center">
        <h1 style="color: white; font-family: 'Lateef', serif;">
            @ViewBag.OrderStatusMessage
        </h1>
        <h2 style="color: white; font-family: 'Reem Kufi', sans-serif;">
            شكرا لاستخدامكم موقع الكتبي
        </h2>
    </div>
    if (ViewBag.NoOrders != "True")
    {
        <br />
        <div class="tablesStyle">
            <table class="table table-striped table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Adress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MobileNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BookName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PublisherName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderID)
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Adress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MobileNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PublisherName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderID)
                        </td>
                    </tr>
                }

            </table>
        </div>
    }
}
else
{
    <div class="text-center" style="height:200px">
        <h2 style="color: white; font-family: 'Lateef', serif;">
            أدخل كود الطلب وتتبع طلبك
        </h2>
    </div>
}

