@model IEnumerable<Book_Store.Models.Order>
@{
    ViewBag.Title = "OrderFollowing";
}
<br />
<h2 class="text-center">تابع طلبك</h2>

@using (Html.BeginForm("CheckOrder", "Orders"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("كود الطلب", htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                @Html.Editor("OrderID", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="تحقق" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<br />
@if (@ViewBag.OrderStatusMessage != null)
{
    <div class="text-center">
        <h3>
            @ViewBag.OrderStatusMessage
        </h3>
        <h4>
            .شكرا لاستخدامكم موقع الكتبي
        </h4>
    </div>
    <hr />
   if (ViewBag.NoOrders != "True")
    {
        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MobileNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PublisherName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderID)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MobileNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PublisherName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderID)
                    </td>
                </tr>
            }

        </table>
    }
}
