@model PagedList.IPagedList<Book_Store.Models.Author>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "UserIndex";
}
<br />
<br />
<div>
    @using (Html.BeginForm("UserIndex", "Authors", FormMethod.Get))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-6">
                <button class="btn btn-primary" value="Search" type="submit"><i class="fa fa-search" aria-hidden="true"></i> ابحث</button>
            </div>
            <div class="col-md-3">
                @Html.Editor("Author", new { htmlAttributes = new { @class = "form-control", @placeholder = "أدخل اسم المصنف" } })
            </div>           
        </div>

    }
</div>
<br />
<div class="tablesStyle" >
    <table class="table table-hover table-striped">
        <tr>
            <th>
                إسم المصنف
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("AuthorBooks" , "Authors" , new {AID=item.AID})">
                        @Html.DisplayFor(modelItem => item.FName)
                    </a>
                </td>
            </tr>
        }

    </table>
</div>
<div class="text-center">
    @Html.PagedListPager(Model, Page => Url.Action("UserIndex", new { Page }))
</div>