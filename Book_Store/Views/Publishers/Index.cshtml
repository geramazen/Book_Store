@model IEnumerable<Book_Store.Models.Publisher>

@{
    ViewBag.Title = "Index";
}
<br>
<p>
    @Html.ActionLink("إضافة دار نشر جديدة", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PName)
            </td>
            <td>
                @Html.ActionLink("تعديل", "Edit", new { id = item.PID }, htmlAttributes: new { @class = "btn btn-primary" }) |
                @Html.ActionLink("حذف", "Delete", new { id = item.PID }, htmlAttributes: new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
