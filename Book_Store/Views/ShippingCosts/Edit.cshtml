@model Book_Store.Models.ShippingCost

@{
    ViewBag.Title = "Edit";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cost, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cost, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="إضافة" class="btn btn-primary" />
                @Html.ActionLink("إلغاء", "Index", null, htmlAttributes: new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
}
<div class="text-center" style="height:150px">
    <h2 style="color: white; font-family: 'Lateef', serif;">
    </h2>
</div>