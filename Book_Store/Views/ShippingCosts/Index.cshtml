@model IEnumerable<Book_Store.Models.ShippingCost>

@{
    ViewBag.Title = "Index";
}



<br />
<div class="tablesStyle">
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    <a href="@Url.Action("edit" , "ShippingCosts" , new {id=item.ID})" class="btn btn-primary">تعديل</a>
                </td>
            </tr>
        }

    </table>
</div>
<div class="text-center" style="height:150px">
    <h2 style="color: white; font-family: 'Lateef', serif;">
    </h2>
</div>